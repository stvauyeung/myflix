%article.video
  .container
    .row
      .video_large_cover.span7.offset1
        %img{ :src => @video.large_cover_url }
      .video_info.span3
        %header
          %h3= @video.title
          %span= "Rating: #{@video.average_rating}/5"
        %p= @video.description
        .actions
          %a.btn.btn-primary(href="") Watch Now
          = link_to "+ My Queue", queuings_path(video_id: @video.id), method: :post, class: "btn"

%section.reviews.container
  .row
    .span10.offset1
      =form_for [@video, Review.new] do |f|
        %fieldset
          %label Rate this video
          =f.select :rating, options_for_select([5,4,3,2,1].map { |num| [pluralize(num, "Star")] })
          =f.label "Write Review"
          =f.text_area :content, :rows => 6, :class => "span6"
        %fieldset.actions.clearfix
          %input(type="submit" value="Submit" class="btn")
          %a(href="") Cancel
      %header
        %h3= "User Reviews (#{@reviews.count})"
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .span2
                %span= "Rating: #{review.rating} / 5"
                %p= "by #{review.user.name}"
              .span8
                %p= review.content