%article.video
  .container
    .row
      .video_large_cover.span7.offset1
        %img{ :src => @video.large_cover_url }
      .video_info.span3
        %header
          %h3= @video.title
          %span= "Rating: #{@video.average_rating}"
        %p= @video.description
        .actions
          %a.btn.btn-primary(href="") Watch Now
          %a.btn(href="") + My Queue

%section.reviews.container
  .row
    .span10.offset1
      =form_for [@video, @review] do |f|
        %fieldset
          %label Rate this video
          =f.select :rating, options_for_select([["5 Stars", 5], ["4 Stars", 4], ["3 Stars", 3], ["2 Stars", 2], ["1 Stars", 1]])
          =f.label "Write Review"
          =f.text_area :content, :rows => 6, :class => "span6"
        %fieldset.actions.clearfix
          %input(type="submit" value="Submit" class="btn")
          %a(href="") Cancel
      %header
        %h3= "User Reviews (#{@video.reviews.count})"
      %ul
        - @reviews.reverse_each do |review|
          %article.review
            %li.row
              .span2
                %span= "Rating: #{review.rating} / 5"
                %p= "by #{review.user.name}"
              .span8
                %p= review.content