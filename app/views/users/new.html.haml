%section.register.container
  .row
    .span10.offset1
      =bootstrap_form_for @user, html: { class: 'form-horizontal'} do |f|
        %header
          %h1 Register
        %fieldset
          =f.text_field :name, label: "Full Name"
          =f.text_field :email
          =f.password_field :password
          =f.password_field :password_confirmation, label: "Confirm Password"
          = hidden_field_tag :invitation_token, @invitation_token
          =f.actions do
            %script(src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button" data-key="pk_test_QRJdOoxJ3r3O8xNTo6fi6u15" data-amount="999" data-name="MyFlix" data-description="1 Month Subscription ($9.99)" data-currency="usd")