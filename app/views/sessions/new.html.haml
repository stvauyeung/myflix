%section.sign_in.container
  .row
    .span10.offset1
      =form_tag '/login', :method => 'post' do |f|
        %header
          %h1 Sign in
        =label_tag :email
        =email_field_tag :email, params[:email]
        %br
        =label_tag :password
        =password_field_tag :password
        %br
        =submit_tag 'Login', :class => "btn btn-secondary"