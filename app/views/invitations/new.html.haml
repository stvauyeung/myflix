%section.invite.container
  .row
    .span10.offset1
      = bootstrap_form_for @invitation, class: "invite" do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          = f.text_field :recipient_name, label: "Friend's Name"
          = f.email_field :recipient_email, label: "Friend's Email Address"
          = f.text_area :message, :rows => 6, :class => "span4", :placeholder => "Tell your friend why they should join Myflix!", label: "Invitation Message"
        %fieldset.action
          %input(type="submit" value="Send Invitation" class="btn")